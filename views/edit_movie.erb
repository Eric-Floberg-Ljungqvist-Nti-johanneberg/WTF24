<form action='/movie/edit/<%= @movie_info["id"] %>' method="POST">
  <input type='text' name="title" placeholder="Title" value="<%= @movie_info["title"] %>">
  <input type='text' name="description" placeholder="Description" value="<%= @movie_info["description"] %>">
  <input type='number' name="year" placeholder="Year" value="<%= @movie_info["year"] %>">
  <input type='text' name="genre" placeholder="Genre" value="<%= @movie_info["genre"] %>">
  <input type='text' name="director" placeholder="Director" value="<%= @movie_info["director"] %>">
  <button type='submit'>Save</button>
</form>
